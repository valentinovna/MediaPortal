@model MediaPortal.Models.ExternalLoginConfirmationViewModel
@{
    Layout = "~/Views/Shared/LogRegLayout.cshtml";
}

<div class="col-md-4 col-md-offset-4" id="loginForm">
    <div class="text-center"><h3>Associate your @ViewBag.LoginProvider account.</h3></div>

    @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p class="text-info text-center">
            Вы успешно авторизовались своим <strong>@ViewBag.LoginProvider</strong> аккаунтом.
            Пожалуйста введите email для этого сайта и кликните кнопку <strong>Зарегистироваться</strong>
            для подтверждения регистрации
            @*You've successfully authenticated with <strong>@ViewBag.LoginProvider</strong>.
            Please enter a user name for this site below and click the Register button to finish
            logging in.*@
        </p>
        <hr />
        <div class="col-md-12 ">
            <div class="form-group">
                <div class="col-md-10 col-md-offset-1 ">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "registerInput", @placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10 col-md-offset-1">
                    <button type="submit" class="btn col-md-12" id="facebookRegisterButton">Зарегистрироваться</button>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
