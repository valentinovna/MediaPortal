@model MediaPortal.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/LogRegLayout.cshtml";
}

<section>
    <div class="col-md-4 col-md-offset-4" id="loginForm">
        @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            @Html.AntiForgeryToken()

            <div class="col-md-12 registerText">Зарегистрируйтесь</div>
            <div class="col-md-12 ">
                <div class="col-md-10 col-md-offset-1 loginLink text-center">или @Html.ActionLink("Войдите в свой аккаунт", "Login", "Account", null, new { @class = "loginLink" })</div>
                
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-1">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @id = "registerInput", @placeholder = "Имя пользователя" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-1">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "registerInput", @placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <p></p>
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-1">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "registerInput", @placeholder = "Пароль" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-1">
                        <button type="submit" class="btn col-md-12" id="registerButton">Зарегистрироваться</button>
                    </div>
                </div>
            </div>
        }
        <div class="col-md-12">
            @{
                using (Html.BeginForm("ExternalLogin", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-1">
                            <button type="submit" class="btn col-md-12" id="facebookRegisterButton" name="provider" value="Facebook" title="Log in using your Facebook account"><span id="IconFB"></span>Регистрация через FB</button>
                        </div>
                    </div>

                }
            }
        </div>
    </div>
<section />

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }


