@model MediaPortal.Models.ChangePasswordViewModel

@{
    Layout = "~/Views/Shared/LogoLayoutSimple.cshtml";
    ViewBag.Title = "Change Password";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewFile</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div id="cangePassForm">
            <div id="cangePassTitle">Форма для изменения пароля</div>
            
            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 control-label-custom" })
                <div class="col-md-2">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label-custom" })
                <div class="col-md-2">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label-custom" })
                <div class="col-md-2">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>

            <p class="text-success text-success-cast">@ViewBag.StatusMessage</p>
            @Html.ValidationSummary("", new { @class = "text-danger text-danger-cast" })

            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <input type="submit" value="Изменить пароль" class="btn btn-default change-password-btn" />
                </div>
                
            </div>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    }

</body>
</html>